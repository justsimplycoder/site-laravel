*
	margin: 0
	padding: 0
	box-sizing: border-box

:root
	--pad 10px

/* Модули */
.page
	display flex
	flex-direction column
	min-height 100vh
	&__content
		flex 1
		padding var(--pad)

.header
	background-color: #ccc
	padding var(--pad)

.footer
	background-color: #ccc
	text-align center
	padding var(--pad)
	font-size 20px

.menu
	&__link--is-action
		color: red

